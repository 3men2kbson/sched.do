<!doctype html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <title>sched.do Stats</title>

    <link href='//fonts.googleapis.com/css?family=Montserrat:400,700|Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "dashboard" %>
  </head>

  <body class="dashboard">
    <nav>
      <header>
        <h1>Sched.do<span>/dashboard</span></h1>
      </header>

      <ul>
        <%= nav_link "Active Users", active_users_dashboard_path %>
        <%= nav_link "Polls Created", polls_created_dashboard_path %>
        <%= nav_link "Users Invited", users_invited_dashboard_path %>
        <%= nav_link "Invitee Conversion", invitee_conversion_dashboard_path %>
      </ul>
    </nav>

    <article>
      <%= yield %>
    </article>
  </body>

  <script type="text/javascript" src="//www.google.com/jsapi"></script>
  <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
  <%= javascript_include_tag :application %>
  <%= yield(:javascript) %>
</html>
