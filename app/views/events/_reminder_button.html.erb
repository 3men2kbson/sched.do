<div class="reminder">
  <span><%= pluralize(@event.other_invitees_count, "other person") %> invited</span>
  <span class="divider">|</span>
  <span><%= pluralize(@event.other_invitees_who_have_not_voted_count, 'has not voted','have not voted') %></span>
  <% if @event.other_invitees_who_have_not_voted_count > 0 %>
    <%= link_to 'Remind Them!', reminders_path(reminder: { receiver_id: @event.id, receiver_type: @event.class.name }, event_id: @event), method: :post, class: "remind-all" %>
  <% end %>
</div>
