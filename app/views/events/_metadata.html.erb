<section class="metadata">
  <div class="reminder">
    <span class="created-by">Created by <strong><%= @event.owner %></strong></span>
    <span class="divider">&ndash;</span>
    <span><%= pluralize(@event.invitees.count, "person") %> invited</span>
    <span class="divider">&ndash;</span>
    <span><%= pluralize(other_invitees_who_have_not_voted_count(@event, current_user), 'other invitee has not voted','other invitees have not voted') %></span>
    <% if other_invitees_who_have_not_voted_count(@event, current_user) > 0 %>
      <% if current_user.yammer_user? %>
        <%= reminder_link 'Remind Them!', @event, class: 'remind-all' %>
      <% end %>
    <% end %>
  </div>
</section>
