<% if vote_for_suggestion %>
  <td>
    <div data-id="<%= suggestion.id %>">
      <%= semantic_form_for vote_for_suggestion, html: { method: :delete } do |f| %>
        <%= f.input :suggestion_id, as: :hidden, input_html: { value: suggestion.id } %>
        <%= f.action :submit, button_html: { value: "Unvote", class: "unvote" } %>
      <% end %>
    </div>
  </td>
<% else %>
  <td>
    <div data-id="<%= suggestion.id %>">
      <%= semantic_form_for suggestion.votes.build do |f| %>
        <%= f.input :suggestion_id, as: :hidden, input_html: { value: suggestion.id } %>
        <%= f.action :submit, button_html: { value: "Vote", class: "vote" } %>
      <% end %>
    </div>
  </td>
<% end %>
