<div class="show-event">
  <h2 class="event-name">
    <%= @event.name %>
    <%= link_to 'Edit event', edit_event_path(@event), class: "edit-button" %>
  </h2>
  <ul class="suggestions">
    <% @suggestions.each do |suggestion| %>
      <li class="suggestion">

        <div class="vote-count" data-id="<%= suggestion.id %>">
        <%= suggestion.vote_count %>
        </div>

        <div class="vote" data-id="<%= suggestion.id %>">
          <%= semantic_form_for suggestion.votes.build do |f| %>
            <%= f.input :suggestion_id, as: :hidden, input_html: { value: suggestion.id } %>
            <%= f.action :submit, button_html: { value: "âœ”" } %>
          <% end %>
        </div>

        <div class="description">
        <%= suggestion.description %>
        </div>

      </li>
    <% end %>
  </ul>
</div>
