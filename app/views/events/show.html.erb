<div class="show-event">
  <h1 class="event-name">
    <%= @event.name %>
  </h1>
  <% if current_user.able_to_edit?(@event) %>
    <%= link_to 'Edit event or invite people', edit_event_path(@event), class: "edit-button" %>
  <% end %>
  <%= render partial: 'grid' %>

  <% if current_user.able_to_edit?(@event) %>
    <div class="event-url">
      <p class="help">Share this link with your friends to invite them and have them vote as well:</p>
      <form>
        <input id="event-url" readonly="readonly" class="read-only" data-title="To copy: âŒ˜+C (Mac) or CTRL+C (Windows/Linux)" type="url" value="<%= event_url(@event) %>" />
      </form>
    </div>

    <div class="invitation-message">
      <%= semantic_form_for(@event) do |f| %>
        <%= f.inputs do %>
          <%= f.input :message, label: false, placeholder: "Enter your custom message here..." %>
        <% end %>
        <%= f.actions do %>
          <%= f.action :submit, label: 'Save Message', button_html: { class: "cta" } %>
          <p class="help">This message will get sent once to every new invitee you add in the grid above.</p>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
