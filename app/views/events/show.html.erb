<div class="show-event">
  <h1 class="event-name">
    <%= @event.name %>
  </h1>
  <% if current_user.able_to_edit?(@event) %>
    <%= link_to 'Edit event or invite people', edit_event_path(@event), class: "edit-button" %>
  <% end %>
  <%= render partial: 'grid' %>

  <p>
    Share this link with your friends to have them vote on it:
    <%= link_to event_url(@event), event_url(@event) %>
  </p>

  <% if current_user.able_to_edit?(@event) %>
    <%= semantic_form_for(@event) do |f| %>
      <%= f.inputs do %>
        <%= f.input :message, label: false, placeholder: "Enter your custom message here..." %>
      <% end %>
      <%= f.actions do %>
        <%= f.action :submit, label: 'Save Invitation Message', button_html: { class: "cta" } %>
      <% end %>
    <% end %>
  <% end %>
</div>
