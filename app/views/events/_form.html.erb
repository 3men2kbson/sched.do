<%= semantic_form_for(@event) do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.semantic_fields_for(:suggestions, @suggestion) do |suggestion_form| %>
      <%= suggestion_form.input :time, as: :string, hint: 'Dec 30 2012, 8:30pm' %>
    <% end %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, label: 'Create event' %>
  <% end %>
<% end %>
