<%= semantic_form_for(@event) do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, label: false, placeholder: "Event name" %>
    <%= f.semantic_fields_for(:suggestions, @suggestion) do |suggestion_form| %>
      <%= suggestion_form.input :time, as: :string, hint: 'Dec 30 2012, 8:30pm', label: false, placeholder: "Time and Date" %>
    <% end %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, label: submit_label %>
  <% end %>
<% end %>
