<script type="text/javascript" src="<%= yammer_assets_host %>/platform/yam.js"></script>
<script type="text/javascript">
  <% if current_user && current_user.yammer_staging %>
    yam.config({appId: '<%= ENV['YAMMER_STAGING_CONSUMER_KEY'] %>'});
  <% else %>
    yam.config({appId: '<%= ENV['YAMMER_CONSUMER_KEY'] %>'});
  <% end %>
  <% if signed_in? %>
    Scheddo.YammerApi.userAccessToken = '<%= current_user.access_token %>';
  <% end %>
</script>
<% if signed_in? %>
  <meta property="yammer-network" content="<%= current_user.yammer_network_id %>">
<% end %>
